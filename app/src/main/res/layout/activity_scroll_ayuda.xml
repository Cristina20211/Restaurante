<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondlo"
    tools:context=".ScrollAyuda">


    <ScrollView


        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="428dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Ayuda"
            android:textColor="@color/black"
            android:textSize="95dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="372dp"
            android:layout_height="169dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Â¿En que te podemos ayudar?"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.589"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageButton
            android:id="@+id/Interfaz"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:onClick="seleccionaAyuda"
            android:src="@drawable/interfas" />

        <ImageButton
            android:id="@+id/quejas"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:onClick="seleccionaAyuda"
            android:src="@drawable/quejas" />

        <ImageButton
            android:id="@+id/CriticasConstructivas"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:onClick="seleccionaAyuda"
            android:src="@drawable/crco" />


    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>