<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomenu"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="vertical">
        <!--Search -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/search">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_search_24"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Search Your Favorite Food"
                    android:inputType="text"
                    android:textColor="@color/teal_700"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>
        <!--Banner -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/banner1"/>
        <!--Text Category -->
        <TextView
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:text="Categorias"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <!--Category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/btnPizza"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/category"
                android:gravity="center"
                android:onClick="selectComida"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="59dp"
                    android:layout_height="56dp"
                    android:background="@drawable/pizza" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza"
                    android:textColor="@color/black"
                    android:textSize="18dp" />


                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnBurger"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:background="@drawable/category"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/hamburgueza" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burger"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnHotDog"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:background="@drawable/category"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/salchipapas"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hot dog"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnRefresco"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:background="@drawable/category"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/refrescocomida"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bebida"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:text="Recomendado"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/btnSmallBurger"
                    android:layout_width="128dp"
                    android:layout_height="138dp"
                    android:src="@drawable/tacos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tacos jaliscos"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$9.25"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <ImageButton
                        android:id="@+id/btnAdd"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/plus_circle"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/btnPePizza"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ensalada"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ensalada al ajillo"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$7.99"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <ImageButton
                        android:id="@+id/btnAdd2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/plus_circle"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <!--Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/navigation">

        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_home"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Home"
                android:layout_gravity="center"
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnProfile"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Perfil"
                android:layout_gravity="center"
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnTrolley"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_shopping_cart"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Carrito"
                android:layout_gravity="center"
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSettings"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajustes"
                android:layout_gravity="center"
                android:textSize="15sp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>